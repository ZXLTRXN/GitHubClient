<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.zxltrxn.githubclient.presentation.auth.AuthViewModel.State"/>
        <import type="com.zxltrxn.githubclient.presentation.auth.AuthViewModel.Action"/>
        <variable
            name="vm"
            type="com.zxltrxn.githubclient.presentation.auth.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/FragmentPadding"
        tools:context=".presentation.auth.AuthFragment">

        <ImageView
            android:id="@+id/iv_git_logo"
            android:src="@drawable/ic_github_circular"
            android:layout_width="@dimen/iv_logo_size"
            android:layout_height="@dimen/iv_logo_size"
            android:layout_marginTop="@dimen/vertical_logo_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/logo_description"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_logo_margin"
            android:hint="@string/et_token"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_git_logo"
            app:errorEnabled="true"
            app:errorText="@{vm.state.getErrorReason()}">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:text="@={vm.token}"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sign_in_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                style="@style/ProgressIndicator"
                android:visibility="@{(vm.state instanceof State.Loading) ? View.VISIBLE : View.GONE}"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/elevation"
                android:backgroundTint="@color/green"
                app:cornerRadius="@dimen/corner_radius"
                android:enabled="@{!(vm.state instanceof State.Loading) }"
                android:onClick="@{v -> vm.onSignButtonPressed()}"
                android:text='@{(vm.state instanceof State.Loading) ? "": @string/btn_sign_in}' />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>