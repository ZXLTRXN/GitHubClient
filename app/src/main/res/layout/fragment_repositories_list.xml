<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.zxltrxn.githubclient.presentation.repositoriesList.RepositoriesListViewModel.State"/>
        <variable
            name="vm"
            type="com.zxltrxn.githubclient.presentation.repositoriesList.RepositoriesListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.repositoriesList.RepositoriesListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_repositories_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{(vm.state instanceof State.Loaded) ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/tv_repositories_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="@{(vm.state instanceof State.Error || vm.state instanceof State.Empty) ? View.VISIBLE : View.GONE}" />

    </LinearLayout>

</layout>
