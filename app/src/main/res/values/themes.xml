<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubClient" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/gray</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubClient</item>
    </style>

    <style name="Fragment.Padding" parent="Theme.AppCompat">
        <item name="android:paddingStart">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/fragment_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_padding</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/gray</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:textAppearance">@style/Widget.Toolbar.Text</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Toolbar.Text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/white</item>
    </style>

    <style name="Widget.ProgressIndicator.Small"  >
        <item name="android:layout_width">@dimen/li_small_size</item>
        <item name="android:layout_height">@dimen/li_small_size</item>
        <item name="indicatorSize">@dimen/li_small_size</item>
    </style>

    <style name="Widget.ProgressIndicator.Large" >
        <item name="android:layout_width">@dimen/li_large_size</item>
        <item name="android:layout_height">@dimen/li_large_size</item>
        <item name="indicatorSize">@dimen/li_large_size</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAppearance">@style/Widget.Button.TextStyle</item>
    </style>

    <style name="Widget.Button.TextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>